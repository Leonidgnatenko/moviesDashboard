<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.geeerty.slyjoker.activity.MainActivity"
    android:baselineAligned="true">

    <fragment
        android:id="@+id/healinesfragment"
        android:name="com.geeerty.slyjoker.fragments.MoviesPopularListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/movies_list_layout" />

    <fragment
        android:id="@+id/articlesfragment"
        android:name="com.geeerty.slyjoker.fragments.MoviesDetailsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/movies_detail_layout" />
</LinearLayout>
